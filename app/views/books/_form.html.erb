    </div>
    <div>
      <%= f.label :author %>
      <%= f.text_field :author %>
    </div>
    <div>
      <%= f.label :editor %>
      <%= f.text_field :editor %>
    </div>
    <div>
      <%= f.label :translator %>
      <%= f.text_field :translator %>
    </div>
    <div>
      <%= f.label :page_count %>
      <%= f.text_field :page_count %>
    </div>
    <div>
      <%= f.label :page_count_edition %>
      <%= f.text_field :page_count_edition %>
    </div>
    <div>
      <%= f.label :teaser %>
      <%= f.text_area :teaser, rows: 6 %>
    </div>
    <div>
      <%= f.label :blurbs %>
      <%= f.text_area :blurbs, rows: 6 %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 6 %>
    </div>
    <div>
      <%= f.label :image_url %>
      <%= f.text_field :image_url %>
    </div>
    <div>
      <%= f.label :price %>
